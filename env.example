# DigitalOcean Spaces Configuration
# Create Spaces API key at: https://cloud.digitalocean.com/account/api/spaces

# Spaces access key
SPACES_ACCESS_KEY=your_spaces_access_key
# Spaces secret key
SPACES_SECRET_KEY=your_spaces_secret_key
# Spaces region (nyc3, sfo3, fra1, etc.)
SPACES_REGION=nyc3
# Your Spaces bucket name
SPACES_BUCKET=your-cleanfeed-bucket
# Spaces endpoint URL
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# SendGrid Configuration
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxx.yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Client email (receives download links)
RECIPIENT_EMAIL=client@example.com

# Dashboard Configuration
DASH_USER=admin
DASH_PASS=admin
DASH_PORT=3000

# IRLToolkit Configuration
# Update in mediamtx.yml: replace IRL_TOOLKIT_HOST and STREAM_KEY
# Example: rtmp://192.168.1.100:1935/live/abc123xyz

